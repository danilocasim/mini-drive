<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.folder.name%></title>
    <link rel="stylesheet" href="../style.css" />
  </head>
  <body>
    <%- include("../components/nav.ejs") %>
    <div class="container">
      <% if(locals.folder) { %> <% if (locals.paths) {%>
      <div class="paths">
        <a href="/"><%= currentUser.username %></a>
        <% paths.forEach((path) => { %>
        <a href="/folder/<%= path.id  %>"> > <%= path.name %></a>
        <% }) %>
      </div>
      <% } %> <%- include("../components/errors.ejs") %>

      <div class="dialogs-btn">
        <dialog>
          <button class="exit-dialog">X</button>
          <form action="/addFolder/<%= folder.id  %>" method="post">
            <label for="foldername">Add Folder</label>
            <input type="text" name="foldername" id="foldername" required />
            <button type="submit">Add</button>
          </form>
        </dialog>
        <button>Add Folder</button>
        <dialog>
          <button class="exit-dialog">X</button>
          <%- include("../components/errors.ejs") %>
          <form
            action="/addFile/<%= folder.id  %>"
            method="post"
            enctype="multipart/form-data"
          >
            <label for="avatar">Add File</label>
            <input type="file" name="avatar" id="avatar" required />
            <button type="submit">submit</button>
          </form>
        </dialog>
        <button>Add File</button>
      </div>
      <% if (locals.storage){ %> <% storage.forEach((folder) => { %> <%
      if(folder.type === "FOLDER") {%> <%- include("../components/folder.ejs",
      {folder: folder}) %> <% } %> <% if (folder.type === "FILE") { %> <%-
      include("../components/file.ejs", {folder: folder}) %> <% } %> <% }) %> <%
      } %> <% } %>
    </div>
    <script src="../index.js"></script>
  </body>
</html>
