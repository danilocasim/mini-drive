<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= locals.folder.name%></title>
  </head>
  <body>
    <% if(locals.folder) { %>

    <form action="/addFolder/<%= folder.id  %>" method="post">
      <label for="foldername">Add Folder</label>
      <input type="text" name="foldername" id="foldername" />
      <button type="submit">Add</button>
    </form>
    <form
      action="/addFile/<%= folder.id  %>"
      method="post"
      enctype="multipart/form-data"
    >
      <input type="file" name="avatar" required />
      <button type="submit">submit</button>
    </form>
    <h1><%= folder.name %></h1>

    <% if (locals.folders){ %> <% folders.forEach((folder) => { %>
    <a href="/folder/<%= folder.id  %>"><button><%= folder.name %></a></button>
    <% }) %> <% } %> <% if (locals.files) {%> <% files.forEach((file) => { %>
    <B><%= file.name %></B>
    <% }) %> <% } %> <% } %>
  </body>
</html>
