generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  fullname String
  email    String   @unique
  password String
  File     File[]
  Folder   Folder[]
}

model Folder {
  id       Int    @id @default(autoincrement())
  name     String
  files    File[]
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  parentId Int?

  folder   Folder?  @relation("ChildrenFolder", fields: [parentId], references: [id])
  children Folder[] @relation("ChildrenFolder")
}

model File {
  id           Int     @id @default(autoincrement())
  name         String
  parentFolder Folder? @relation(fields: [folderId], references: [id])
  folderId     Int?
  user         User    @relation(fields: [userId], references: [id])
  userId       Int
}
